(define (Imp pago)
    (* 0.15 pago) 
)

(define (CalcularImpuesto)
    (define pago 0)
    (display "Esta usando una funcion para calcular el impuedto de un contador.\nDigite la el pago: ")
    (set! pago (read))
    (display "El impuesto es:")
    (Imp pago)
)

(define (Monedas a b c d e)
    (+ (* 20 a) (* 50 b) (* 100 c) (* 200 d) (* 500 e))
)

(define (SumarMonedas)
    (define a 0)
    (define b 0)
    (define c 0)
    (define d 0)
    (define e 0)
    (display "Esta usando una funcion para sumar monedas.\nCantidad de monedas de 20: ")
    (set! a (read))
    (display "Cantidad de monedas de 50: ")
    (set! b (read))
    (display "Cantidad de monedas de 100: ")
    (set! c (read))
    (display "Cantidad de monedas de 200: ")
    (set! d (read))
    (display "Cantidad de monedas de 500: ")
    (set! e (read))
    (display "Dinero en total: ")
    (Monedas a b c d e)
    
)

(define (Ganancias e)
    (- (* 10000 e) 30000
)

(define (CalcularGanancias)
    (define e 0)
    (display "Esta usando una funcion para calcular ganancias por impuestos.\nÂ¿Cuantas personas asistieron: ")
    (set! e (read))
    (display "Las ganancias fueron: ")
    (Ganancias e)
)