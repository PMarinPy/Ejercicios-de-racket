#lang racket
;-Dado como dato un valor entero correspondiente a una temperatura en grados centígrados, determine e imprima la
;actividad apropiada para desarrollar, basados en la siguiente tabla.

(define (temp)
  (define t 0)
  (display "Digite la temperatura en como entero: ")
  (set! t (read))
  (if (not (integer? t))
      (temp)
       t))
(define (calc)
  (define t 0)
  (displayln "Función para determinar el deporte adecuado a practicar.")
  (set! t (temp))
  (if (> t 25)
      (displayln "Debe practicar natación.")
      (if (>= t 21)
          (displayln "Debe practicar golf.")
          (if (>= t 18)
              (displayln "Debe practicar baloncesto.")
              (if (>= t 15)
                  (displayln "Debe practicar atletismo.")
                  (if (and ( < t 15) (> t 0))
                      (displayln "Debe practicar tenis.")
                      ( displayln "Practique tenis, pero tenga cuidado con el frío."))))))
  (displayln "            ------------------------            \n")
  (calc))
(calc)
