#lang racket
;Calcular la utilidad que un trabajador de una empresa recibe en el reparto anual de utilidades, si esta se le asigna como
;un porcentaje de su salario mensual el cual depende de su antigüedad en la empresa, de acuerdo con la siguiente tabla:
(define (calcp s p)
  (* s p 12))
(define (front c)
  (display "La utilidad del trabajador es: ")
  (displayln c))

(define (utilidad)
  (define p 0)
  (define s 0)
  (define t 0)
  (display "Está usando una funicón para calcular la utilidad entregada a un empleado en diciembre.\nDigite los años que lleva en la empresa: ")
  (set! t (read))
  (display "Digite el salario: ")
  (set! s (read))
  (if (>= t 10 )
      (front (calcp s 0.20))
      (if (>= t 5)
          (front (calcp s 0.15))
          (if (>= t 2)
              (front (calcp s 0.10))
              (if (>= t 1)
                  (front (calcp s 0.7))
                  (if (and(< t 1) (> t 0))
                      (front (calcp s 0.5))
                      (display "Digite un número válido"))))))
  (utilidad))
(utilidad)
