#lang racket
(define(calcar r h)
  (+(* (* 2 pi) r h) (* (* 2 pi )(expt r 2)))
  )


(define (areacil)
  (define r 0)
  (define h 0)
  (define s 0)
  (display "Función para calcular el área de la superficie un cilindro.\nDigite el radio: ")
  (set! r (read))
  (display "Digite la altura: ")
  (set! h (read))
  (display "El área es: ")
  (display (calcar r h))
  (display "¿Desea ejecutar de nuevo la función?\n1. Tara ejecutar de nuevo.\n2. Para cerrar. ")
  (set! s (read))
  (if (= s 1)
      (areacil)
      (if (= s 2)
          (display "Gracias, hasta luego.")
          (display "Opción inválida. \nCerrando programa.")))
  )
(areacil)
